<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="175%"
            android:pivotY="22%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/tooltip" />
                <padding
                    android:bottom="0dp"
                    android:left="0dp"
                    android:right="0dp"
                    android:top="0dp" />
            </shape>
        </rotate>
    </item>
</layer-list>