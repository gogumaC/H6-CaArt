<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="org.softeer_2nd.caArt.R" />

        <variable
            name="dialog"
            type="org.softeer_2nd.caArt.dialogs.TwoButtonsDialog" />

        <variable
            name="title"
            type="String" />

        <variable
            name="description"
            type="String" />

        <variable
            name="primaryButtonText"
            type="String" />

        <variable
            name="secondaryButtonText"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_background_12"
        android:backgroundTint="@color/white"
        android:minWidth="60dp"
        android:paddingVertical="23dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_two_buttons_dialog_secondary"
            style="@style/SecondaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="32dp"
            android:onClick="@{()->dialog.onSecondaryButtonClicked()}"
            android:text="@{secondaryButtonText!=null?secondaryButtonText:@string/no,default=@string/no}"
            app:layout_constraintEnd_toStartOf="@+id/btn_two_buttons_dialog_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_two_buttons_dialog_description" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_two_buttons_dialog_primary"
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="17dp"
            android:onClick="@{()->dialog.onPrimaryButtonClicked()}"
            android:text="@{primaryButtonText!=null?primaryButtonText:@string/yes, default=@string/yes}"
            app:layout_constraintBottom_toBottomOf="@id/btn_two_buttons_dialog_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_two_buttons_dialog_secondary"
            app:layout_constraintTop_toTopOf="@id/btn_two_buttons_dialog_secondary" />

        <TextView
            android:id="@+id/tv_two_buttons_dialog_title"
            style="@style/DialogTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@{title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="추천이 도움이 되었나요?" />

        <TextView
            android:id="@+id/tv_two_buttons_dialog_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{description}"
            app:layout_constraintEnd_toEndOf="@+id/tv_two_buttons_dialog_title"
            app:layout_constraintStart_toStartOf="@+id/tv_two_buttons_dialog_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_two_buttons_dialog_title"
            tools:text="고객님의 답변을 반영해 더 나은 서비스를 만들게요!" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>