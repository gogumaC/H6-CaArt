<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background_color_black">

        <TextView
            android:id="@+id/tv_home_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@hyundaisanstextkrregular"
            android:lineSpacingExtra="15dp"
            android:text="@string/recommend_life_style"
            android:textColor="@color/home_gray_1000"
            android:textSize="20sp"
            app:highlightText="@{@string/life_style}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <VideoView
            android:id="@+id/video_home_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="264dp"
            android:layout_marginBottom="230dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_top_shadow"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="236dp"
            android:background="@drawable/shape_video_shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_bottom_shadow"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_video_shadow"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@id/video_home_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_make_my_self"
            style="@style/HomeSelfMakeButtonStyle"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:text="@string/make_myself"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_move_car_color"
            style="@style/HomeRecommendButtonStyle"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:text="@string/recommend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_make_my_self" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>