<resources>

    <style name="carArtButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/hyundaisanstextkrmedium</item>
        <item name="android:paddingVertical">11dp</item>
        <item name="elevation">0dp</item>
        <item name="height">52dp</item>
    </style>

    <style name="PrimaryButtonStyle" parent="carArtButtonStyle">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="height">52dp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="carArtButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gray_0</item>
        <item name="strokeColor">@color/gray_600</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="HomeSelfMakeButtonStyle" parent="carArtButtonStyle">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/gray_1000</item>
        <item name="strokeColor">@color/gray_600</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">92dp</item>
    </style>

    <style name="HomeRecommendButtonStyle" parent="carArtButtonStyle">
        <item name="android:backgroundTint">@color/gray_1000</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>
