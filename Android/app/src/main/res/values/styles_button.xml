<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">6dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/hyundaisanstextkrmedium</item>
        <item name="android:paddingVertical">11dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">6dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_0</item>
        <item name="android:fontFamily">@font/hyundaisanstextkrmedium</item>
        <item name="android:paddingVertical">11dp</item>
        <item name="strokeColor">@color/gray_600</item>
        <item name="strokeWidth">1dp</item>
        <item name="elevation">0dp</item>
    </style>
</resources>