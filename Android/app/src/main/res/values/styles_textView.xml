<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/hyundaisansheadkrmedium</item>
    </style>

    <style name="CarColorTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/hyundaisanstextkrmedium</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="SelectedBuyerTextStyle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:text">@string/buyer_selected</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hyundaisanstextkrmedium</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="AdoptionRateTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/hyundaisanstextkrmedium</item>
        <item name="android:textColor">@color/active_blue</item>
    </style>

    <style name="DetailIndicatorTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/hyundaisansheadkrregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="SelectedDetailIndicatorTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/hyundaisansheadkrmedium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_50</item>
    </style>

    <style name="PriceTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/hyundaisanstext_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/price</item>
    </style>

    <style name="BottomSheetTitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/hyundaisanstext_bold</item>
    </style>

    <style name="BottomSheetOptionDetailTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:fontFamily">@font/hyundaisanstext_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/hyundaisansheadkrbold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_0</item>
    </style>

    <style name="DialogDescriptionTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/hyundaisanstextkrregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="LifeStylePersonaTagTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">
            @drawable/shape_life_style_persona_tag_background_r100_transparent_blue
        </item>
        <item name="android:textColor">@color/active_blue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/hyundaisanstextkrregular</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>
</resources>